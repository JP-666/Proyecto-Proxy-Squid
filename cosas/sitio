server {
	listen 443 ssl;
	server_name default_server;

	ssl_certificate /etc/squid/cert/squid.pem; 
	ssl_certificate_key /etc/squid/cert/squid.key;

	ssl_protocols TLSv1.2 TLSv1.3;
	ssl_ciphers HIGH:!aNULL:!MD5;

	root /srv/;
	index index.php;

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/run/php/php-fpm.sock;
	}
}

server { # Esto solo esta aqui para enviar a nuestros usuarios a la version SSL
	listen 80;
	server_name default_server;
	return 301 https://$host$request_uri;
}
